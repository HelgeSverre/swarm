# ===================================
# OpenAI Configuration
# ===================================
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL="gpt-4.1-mini"
OPENAI_TEMPERATURE=0.7

# ===================================
# Logging Configuration
# ===================================
LOG_ENABLED=true
LOG_PATH=logs
LOG_LEVEL=info
APP_ENV=local
DEBUG=true

# ===================================
# UI Configuration
# ===================================
# UI mode: 'classic' (default) or 'three-pane'
SWARM_UI_MODE=classic

# ===================================
# Timeout Configuration
# ===================================
# Per-request timeout in seconds (default: 600 = 10 minutes)
SWARM_REQUEST_TIMEOUT=600
# Subprocess timeout in seconds (default: 300 = 5 minutes)
SWARM_SUBPROCESS_TIMEOUT=300
# Heartbeat interval in seconds (default: 30)
SWARM_HEARTBEAT_INTERVAL=30
# Enable retry suggestion on timeout (default: true)
SWARM_TIMEOUT_RETRY_ENABLED=true

# ===================================
# Tavily API Configuration
# ===================================
TAVILY_API_KEY="replace-me"

